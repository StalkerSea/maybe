<div class="container mx-auto px-4 bg-surface min-h-screen">
  <h1 class="text-2xl font-bold mb-4 text-primary">Exchange Rate Checker</h1>
  <%= form_with url: exchange_rates_path, method: :get, data: { turbo_frame: "exchange_rate_result", turbo_action: "advance" } do |form| %>
    <div class="flex items-center space-x-4 mb-4">
      <div>
        <%= form.label :from, "From", class: "block text-sm font-medium text-secondary" %>
        <%= form.text_field :from, value: @from, class: "mt-1 block w-full rounded-md border-input shadow-sm focus:border-accent focus:ring-accent sm:text-sm bg-input text-primary" %>
      </div>
      <div>
        <%= form.label :to, "To", class: "block text-sm font-medium text-secondary" %>
        <%= form.text_field :to, value: @to, class: "mt-1 block w-full rounded-md border-input shadow-sm focus:border-accent focus:ring-accent sm:text-sm bg-input text-primary" %>
      </div>
      <div>
        <%= form.label :date, "Date", class: "block text-sm font-medium text-secondary" %>
        <%= form.date_field :date, value: @date, class: "mt-1 block w-full rounded-md border-input shadow-sm focus:border-accent focus:ring-accent sm:text-sm bg-input text-primary" %>
      </div>
      <div>
        <%= form.submit "Check Rate", class: "mt-5 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-accent hover:bg-accent-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent" %>
      </div>
    </div>
  <% end %>

  <%= turbo_frame_tag "exchange_rate_result" do %>
    <% if flash[:error] %>
      <div class="p-4 mb-4 text-sm text-error bg-error-surface rounded-lg" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>

    <% if @rate %>
      <div class="p-4 bg-container rounded-lg shadow">
        <h2 class="text-lg font-semibold text-primary">Exchange Rate Result</h2>
        <p class="text-secondary"><strong>Date:</strong> <%= @rate.date %></p>
        <p class="text-secondary"><strong>From:</strong> <%= @rate.from %></p>
        <p class="text-secondary"><strong>To:</strong> <%= @rate.to %></p>
        <p class="text-secondary"><strong>Rate:</strong> <%= @rate.rate %></p>
      </div>
    <% end %>
  <% end %>
</div>